{
  "name": "cdcp",
  "version": "1.0.0",
  "description": "Construction Digital Control Platform - 建設業DXプラットフォーム",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd apps/backend && npm install",
    "install:frontend": "cd apps/frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd apps/backend && npm run test",
    "test:frontend": "cd apps/frontend && npm run test",
    "test:e2e": "cd apps/backend && npm run test:e2e",
    "test:cov": "npm run test:backend -- --coverage && npm run test:frontend -- --coverage",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd apps/backend && npm run lint",
    "lint:frontend": "cd apps/frontend && npm run lint",
    "format": "prettier --write \"apps/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"apps/**/*.{ts,tsx,json,md}\"",
    "db:migrate": "cd apps/backend && npm run db:migrate",
    "db:seed": "cd apps/backend && npm run db:seed",
    "db:studio": "cd apps/backend && npm run db:studio",
    "docker:db": "docker-compose up -d postgres",
    "docker:redis": "docker-compose up -d redis",
    "docker:all": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "construction",
    "digital-transformation",
    "project-management",
    "photo-management",
    "schedule-management",
    "cost-management"
  ],
  "author": "Construction Company IT Department",
  "license": "UNLICENSED"
}
